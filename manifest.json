{
  "manifest_version": 2,
  "name": "Big Brother",
  "version": "0.1",
  "description": "Track the number of pages you have read.",
  "icons": {
    "19": "images/icon19.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "/js/lib/moment.min.js",
      "/js/background.js"
    ]
  },
  "options_page": "options.html"
}